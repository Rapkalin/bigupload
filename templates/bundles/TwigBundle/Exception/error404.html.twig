{# templates/bundles/TwigBundle/Exception/error404.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="container container-error404" >
        <div class="message-error404">
            <i class="fa-solid fa-circle-chevron-down"></i>
            <h1 id="title-error404">File not found</h1>
            <p id="text-error404">{{ exception.message |raw }}</p>
            {% include 'components/buttons/link-button.html.twig' with {
                'id': 'error-404-btn',
                'color': 'blue',
                'text': 'Upload a new file',
                'href': path('home.index')
            } %}
        </div>
    </div>
{% endblock %}