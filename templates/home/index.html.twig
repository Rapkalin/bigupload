{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div id="uploadContainer">
        <div id="uploadFrom">
            <div id="uploadArea">
                <div id="droparea">
                    <p>Drop your file here</p>
                    <p id="fileSelect">Please note that you can only upload one file at a time</p>
                    <span id="dropareaOr">or</span>
                    <a id="browsefilesBta" href="javascript:;">Select your file</a>
                    <button id="refreshButton" class="downloadClipBoard hidden" onClick="window.location.href=window.location.href">Upload a new file</button>
                </div>
                <div id="filelist"></div>
                <div id="uploadBta" class="hidden">
                    <a id="uploadfiles" href="javascript:;">Upload your file</a>
                </div>
                <div id="downloadOrCopy" class="hidden">
                    <!-- <div id="downloadBta">
                        <a id="downloadFile" href="app/download.php" target="_blank">Download your files</a>
                    </div> -->

                    <!-- <div id="copyArea"> -->
                    <button id="copyLinkButton" class="downloadClipBoard">Copy the link</button>
                    <script type="text/javascript" src={{ asset("scripts/copyToClipboard.js") }}></script>
                    <textarea readonly id="downloadLink" class="hidden">link</textarea>
                    <!-- </div> -->
                </div>
            </div>
        </div>
    </div>

    <div id="descriptionArea">
        <h1 id="uploadTitle">WELCOME TO BIGUPLOAD</h1>
        <p id="subtitle">Choose the file you want to upload, copy and share the download link :)</p>
    </div>

    <script type="text/javascript" src={{ asset("scripts/upload.js") }}></script>
    <script type="text/javascript" src={{ asset("scripts/copyToClipBoard.js") }}></script>
{% endblock %}
